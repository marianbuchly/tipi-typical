<p id="notice"><%= notice %></p>

  <% if current_user %>

  <h2>Welcome, <%= current_user.handle %></h2><br>


  <% else %>
  <h1>Welcome</h1>
  <% end %>
<div class="container">
    <% @tipis.each do |tipi| %>
  <div class="tipi-box">
    <div class="row">
      <div class="col-lg-12">
        <p><span><h2><%= tipi.title %></h2></span><p>
      </div>
      <div class="col-lg-12">
        <p><span class="location"><%= tipi.location %></span></p>
        <hr>
      </div>
      <div class="col-xs-6">
        <br>
        <hr>
        <p class="tipi-description"><%= tipi.description %></p>
      </div>
      <div class="col-xs-6">
        <%= image_tag(tipi.image, class: "tipi-pic img-responsive")%>
      </div>
    </div>
    <div class="row row-price">
      <div class="col-lg-12">
        <ul id="list-horizontal" class="no-bullets price-persons" >
          <br>
          <li><p>Persons:<%= tipi.persons %></p></li>
          |
          <li><p>Price:<%= tipi.price %></p></li>
        </ul>
      </div>
    </div>
  </div>
  <br>
    <% end %>
  <br>
</div>
