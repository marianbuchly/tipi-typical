  <% if current_user %>
  <h2>Welcome, <%= current_user.name %></h2>
  <p>Glad you could join us.</p>

  <% else %>
  <h1>Welcome</h1>
  <% end %>
<div class="container">
    <% @tipis.each do |tipi| %>
  <div class="tipi-box">
      <div class="row">
          <div class="col-xs-6">
              <p>Name:<%= tipi.title %></p>
              <p>Location:<%= tipi.location %></p>
              <p>Description:<%= tipi.description %></p>
              <p>Persons:<%= tipi.persons %></p>
              <p>Price:<%= tipi.price %></p>
          </div>

          <!-- img-responsive makes the image adapt to vw-size -->

          <div class="col-xs-6">
              <%= image_tag(tipi.image, class: "tipi-pic img-responsive")%>
          </div>
      </div>
  </div>
  <br>
    <% end %>
  <br>
</div>
